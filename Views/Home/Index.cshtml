@{
    ViewData["Title"] = "Bike Rental";
}

<!-- Hero Section -->
<div class="container-fluid bg-light py-5" id="hero">
    <div class="row align-items-center justify-content-center px-5">
        <div class="col-md-6 mb-4 mb-md-0 animate__animated animate__fadeInLeft">
            <h1 class="display-5 fw-bold">BIKE RENTAL</h1>
            <p class="lead mt-3">
                Experience the joy of riding a bike without the hassle of ownership.
                <strong>Join us at Online Bike Rental</strong> and embark on your next biking adventure <strong>today!</strong>
            </p>
            <a href="/Account/Register" class="btn btn-success btn-lg mt-3">
                <i class="bi bi-bicycle"></i> Book Your Ride
            </a>
        </div>
        <div class="col-md-6 text-center animate__animated animate__fadeInRight">
            <img src="~/uploads/bike.jpg" class="img-fluid" alt="Bike Rental" style="max-height: 420px;" />
        </div>
    </div>
</div>
