@model RideRental.Models.Bike
@{
    ViewData["Title"] = "Edit Bike";
}
<h2>Edit Bike</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@if (!string.IsNullOrEmpty(Model.ImageURL))
{
    <div class="mb-3">
        <img src="@Model.ImageURL" class="img-thumbnail" style="max-height: 150px;" />
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BikeID" />

    <div class="mb-3">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Year"></label>
        <input asp-for="Year" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="EngineType"></label>
        <input asp-for="EngineType" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Power"></label>
        <input asp-for="Power" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ColorOptions"></label>
        <input asp-for="ColorOptions" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AvailabilityStatus"></label>
        <select asp-for="AvailabilityStatus" class="form-select">
            <option>Available</option>
            <option>Rented</option>
            <option>Pending Approval</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="RentalPricePerHour"></label>
        <input asp-for="RentalPricePerHour" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
