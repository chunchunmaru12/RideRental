@model IEnumerable<RideRental.Models.Bike>
@{
    ViewData["Title"] = "Manage Bikes";
}
<h2>Manage Bikes</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Bike</a>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Model</th>
            <th>Year</th>
            <th>Category</th>
            <th>Status</th>
            <th>Price/Hour</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
            <tr>
                <td>@bike.Model</td>
                <td>@bike.Year</td>
                <td>@bike.Category</td>
                <td>@bike.AvailabilityStatus</td>
                <td>@bike.RentalPricePerHour</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@bike.BikeID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@bike.BikeID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
