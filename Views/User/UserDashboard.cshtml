@model IEnumerable<RideRental.Models.Bike>

@{
    ViewData["Title"] = "Available Bikes";
}
<h2>Available Bikes</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (Model == null)
{
    <div class="alert alert-danger">Model is null — bikes not passed to view!</div>
}

<div class="row">
    @foreach (var bike in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@bike.ImageURL" class="card-img-top" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@bike.Model (@bike.Year)</h5>
                    <p class="card-text">
                        Category: @bike.Category<br />
                        Power: @bike.Power<br />
                        Price: $@bike.RentalPricePerHour/hr
                    </p>
                    <a asp-action="Rent" asp-route-id="@bike.BikeID" class="btn btn-primary w-100">Rent Now</a>
                </div>
            </div>
        </div>
    }
</div>
