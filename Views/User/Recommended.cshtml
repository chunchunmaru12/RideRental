@model IEnumerable<RideRental.Models.Bike>

<h3 class="mt-4"><i class="bi bi-stars"></i> Recommended For You</h3>
<p class="text-muted mb-3">Based on similar Users</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> We couldn't generate recommendations yet.
        <br />
        Please rent a bike or set your preferences.
    </div>
}
else
{
    <div class="row">
        @foreach (var bike in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@bike.ImageURL" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@bike.Model (@bike.Year)</h5>
                        <p class="card-text">
                            Category: @bike.Category<br />
                            Power: @bike.Power<br />
                            Price: $@bike.RentalPricePerHour/hr
                        </p>
                        <a asp-controller="Bikes" asp-action="Details" asp-route-id="@bike.BikeID" class="btn btn-outline-success w-100">View</a>

                    </div>
                </div>
            </div>
        }
    </div>
}
