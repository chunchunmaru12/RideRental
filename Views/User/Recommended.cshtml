@model IEnumerable<RideRental.Models.Bike>

<h3 class="mt-4"><i class="bi bi-stars"></i> Recommended For You</h3>
<p class="text-muted mb-3">Based on your recent rentals</p>

@if (!Model.Any())
{
    <div class="alert alert-warning mb-4">
        <i class="bi bi-info-circle"></i> No recommendations based on history.
        <br />
        <strong>Try input-based recommendation:</strong>
    </div>

    <form asp-action="GetRecommendationsByInput" asp-controller="Bikes" method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Category</label>
            <select name="category" class="form-select">
                <option value="">Any</option>
                <option>Sport</option>
                <option>Cruiser</option>
                <option>Touring</option>
                <option>AllRound</option>
                <option>Scooter</option>
                <option>Classic</option>
                <option>OffRoad</option>
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label fw-semibold">Engine Type</label>
            <select name="engineType" class="form-select">
                <option value="">Any</option>
                <option>Single Cylinder</option>
                <option>Twin Cylinder</option>
                <option>V2 Engine</option>
                <option>Four-Stroke</option>
                <option>Two-Stroke</option>
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label fw-semibold">Minimum Power (CC)</label>
            <input type="number" name="minPower" class="form-control" placeholder="e.g., 150" />
        </div>

        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary mt-2">
                <i class="bi bi-search"></i> Get Recommendations
            </button>
        </div>
    </form>

}
else
{
    <div class="row">
        @foreach (var bike in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@bike.ImageURL" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@bike.Model (@bike.Year)</h5>
                        <p class="card-text">
                            Category: @bike.Category<br />
                            Power: @bike.Power<br />
                            Price: $@bike.RentalPricePerHour/hr
                        </p>
                        <a asp-controller="Bikes" asp-action="UserDashboard" class="btn btn-outline-primary w-100">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
